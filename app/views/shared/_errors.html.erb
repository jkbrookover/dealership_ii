<% if @vehicle.errors.any? %>
<section id="errors">
  <header>
    <h2>
      Oops! The <%= @vehicle.class.name.titleize.downcase %> could not be saved.
  </h2>
  <h3>
    Please correct the following <%= pluralize(@vehicle.errors.count, "error") %>:
  </h3>
</header>
<ul>
  <% @vehicle.errors.full_messages.each do |message| %>
  <li><%= message %> </li>
  <% end %>
</ul>
</section>
<% end %>      
